{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://audit-flash-os/schemas/objects/order_draft.v1.schema.json",
  "title": "OrderDraft object v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["order_id", "lines"],
  "properties": {
    "order_id": {"type": "string", "format": "uuid"},
    "po_number": {"type": ["string", "null"], "minLength": 1},
    "customer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {"type": ["string", "null"], "minLength": 1},
        "vat": {"type": ["string", "null"], "minLength": 1},
        "address": {"type": ["string", "null"], "minLength": 1},
        "email": {"type": ["string", "null"], "format": "email"}
      }
    },
    "delivery": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "address": {"type": ["string", "null"], "minLength": 1},
        "date": {"type": ["string", "null"], "format": "date"},
        "incoterm": {"type": ["string", "null"], "minLength": 1}
      }
    },
    "currency": {"type": "string", "default": "EUR"},
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["line_no", "sku", "qty"],
        "properties": {
          "line_no": {"type": "integer", "minimum": 1},
          "sku": {"type": "string", "minLength": 1},
          "description": {"type": ["string", "null"]},
          "qty": {"type": "number"},
          "uom": {"type": ["string", "null"]},
          "unit_price": {"type": ["number", "null"]},
          "total_price": {"type": ["number", "null"]}
        }
      }
    },
    "totals": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "subtotal": {"type": ["number", "null"]},
        "tax": {"type": ["number", "null"]},
        "total": {"type": ["number", "null"]}
      }
    }
  }
}
