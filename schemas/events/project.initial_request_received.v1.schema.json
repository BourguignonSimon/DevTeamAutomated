{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://audit-flash-os/schemas/events/project.initial_request_received.v1.schema.json",
  "title": "PROJECT.INITIAL_REQUEST_RECEIVED payload v1",
  "description": "Event emitted when a new project request is received via the web interface",
  "type": "object",
  "x_event_type": "PROJECT.INITIAL_REQUEST_RECEIVED",
  "properties": {
    "project_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique project tracking ID"
    },
    "request_text": {
      "type": "string",
      "description": "The initial request description from the user"
    },
    "requester": {
      "type": "object",
      "description": "Information about the requester",
      "properties": {
        "name": {"type": "string"},
        "email": {"type": "string", "format": "email"}
      }
    },
    "file_info": {
      "type": ["object", "null"],
      "description": "Information about uploaded file if any",
      "properties": {
        "artifact_id": {"type": "string"},
        "filename": {"type": "string"},
        "content_type": {"type": "string"},
        "size": {"type": "integer"}
      }
    }
  },
  "required": ["project_id", "request_text"],
  "additionalProperties": false
}
